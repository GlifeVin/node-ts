{
	"name": "node-ts",
	"version": "0.0.0",
	"author": "vinle",
	"description": "Node.js & TypeScript starter",
	"engines": {
		"node": ">=18.11",
		"pnpm": ">=7.27"
	},
	"scripts": {
		"dev": "pnpm /dev:.*/",
		"dev:build": "esbuild ./src/**/* --bundle --outdir=dist --packages=external --platform=node --sourcemap --watch",
		"dev:run": "moleculer-runner --repl --hot dist/services/**/*.service.js",
		"build": "esbuild index=./src --bundle --minify --outdir=dist --packages=external --platform=node",
		"start": "moleculer-runner dist"
	},
	"dependencies": {
		"esbuild": "^0.19.4",
		"moleculer-repl": "^0.7.3",
		"moleculer-web": "^0.10.4",
		"moleculer-db": "^0.8.20",
		"moleculer-db-adapter-mongo": "^0.4.15",
		"nats": "^2.7.1",
		"moleculer": "^0.14.26"
	},
	"devDependencies": {
		"@biomejs/biome": "1.2.2",
		"@types/node": "^20.7.1",
		"moleculer-cli": "^0.8.1"
	}
}
